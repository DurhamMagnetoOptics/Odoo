<odoo>
    <record id="mrp_bom_lot_product_views" model="ir.ui.view">
        <field name="name">MRP BOM lot</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <field name="tracking" position="after">
                <field name="link_BOM_to_lot" attrs="{'invisible': [('tracking', 'not in', ['serial', 'lot'])]}"/>
            </field>
        </field>
    </record>
</odoo>



