<odoo>
    <record id="stock_serialise_per_product_product_template_views" model="ir.ui.view">
        <field name="name">Product Template Serialisation</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <field name="tracking" position="after">
                <field name="sequence_id" attrs="{'invisible': [('tracking', 'not in', ['serial', 'lot'])]}"/>
            </field>
        </field>
    </record>

    <record id="stock_serialise_per_product_product_views" model="ir.ui.view">
        <field name="name">Product Serialisation</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <field name="tracking" position="after">
                <field name="sequence_id" attrs="{'invisible': [('tracking', 'not in', ['serial', 'lot'])]}"/>
            </field>
        </field>
    </record>    
</odoo>



